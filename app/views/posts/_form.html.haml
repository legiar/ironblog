- form_for(@post) do |f|
  
  - if @post.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.post.invalid_record')
      %ul
      - @post.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :date
    %br
    = f.datetime_select :date
  .field
    = f.label :teaser
    %br
    = f.text_area :teaser
  .field
    = f.label :body
    %br
    = f.text_area :body
  .field
    = f.label :visible
    %br
    = f.check_box :visible
  .field
    = f.label :user
    %br
    = f.text_field :user

  .actions
    = f.submit I18n.t('submit')
